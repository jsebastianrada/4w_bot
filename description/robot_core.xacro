<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">


    <xacro:include filename="inertial_macros.xacro"/>


    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>


    <!-- Base link-->

    <link name="base_link">
    </link>


    <!--Chassis link-->

    <joint name="chasis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.123825 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.123825 0 0.0508"/>
            <geometry>
                <box size="0.24765 0.2032 0.1016"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.123825 0 0.0508"/>
            <geometry>
                <box size="0.24765 0.2032 0.1016"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.24765" y="0.2032" z="0.1016">
            <origin xyz="0.123825 0 0.0508" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>


    <!--Left front wheel link-->

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.091825 0.1397 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0762" radius="0.060325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!--right front wheel link-->

    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.091825 -0.1397 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0762" radius="0.060325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!--Left rear wheel link-->

    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_rear_wheel"/>
        <origin xyz="-0.091825 0.1397 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0762" radius="0.060325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!--right rear wheel link-->

    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel"/>
        <origin xyz="-0.091825 -0.1397 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.060325" length="0.0762"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0762" radius="0.060325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


</robot>